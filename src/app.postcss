@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
}
.app-bar {
	border-bottom: solid 1px #d6d7d9;
}
.dark .app-bar {
	border-bottom: solid 1px #2b2e40;
}
#sidebar-left {
	border-right: solid 1px #d6d7d9;
}
.dark #sidebar-left {
	border-right: solid 1px #2b2e40;
}
#shell-footer {
	border-top: solid 1px #d6d6d6;
}
.dark #shell-footer {
	border-top: solid 1px #2b2e40;
}
.drawer {
	border-radius: 0;
}